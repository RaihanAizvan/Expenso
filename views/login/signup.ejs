<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>EXPENSO | signup</title>
    <link rel="stylesheet" href="/css/login.css" />
    <link rel="stylesheet" href="nav.css" />
    <link rel="stylesheet" href="footer.css" />
  </head>
  <body>
    <div class="main-wrapper"></div>
    <!-- <header>
      <section class="wrapper">
        <div class="top">USER LOGIN</div>
        <div class="bottom" aria-hidden="true">USER LOGIN</div>
      </section>
    </header> -->

    <div class="container">
      <div class="login-box">
        <h2>Signup</h2>
        <!-- <p class="error"></p> -->
        <form action="/signup" method="post">
          <div class="input-box">
            <input
              type="text"
              name="name"
              required
              value="<%= typeof email !== 'undefined' ? name : '' %>"
            />
            <label id="name">Name</label> 
          </div>
          <div class="input-box">
            <input
              type="email"
              name="email"
              required
              value="<%= typeof email !== 'undefined' ? email : '' %>"
            />
            <% if (typeof error !== 'undefined') { %>
            <p class="error"><%= error %></p>
            <% } %>
            <label id="email">Email</label>
          </div>
          <div class="input-box">
            <input type="password" name="password" required />
            <label>Password</label>
          </div>
          <div class="forgot-pass">
            <a href="/login">Already a User? Try logsin</a>
          </div>
          <button type="submit" class="btn">Create User</button>
        </form>
        <a href="/"><button class="backbtn">Back</button></a>
      </div>
    </div>
  </body>
</html>
